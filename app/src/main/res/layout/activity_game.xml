<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".activities.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game_clockTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxWidth="33dp"
                android:maxHeight="20dp"
                android:minWidth="33dp"
                android:minHeight="50dp"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/game_gameModeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxWidth="33dp"
                android:maxHeight="20dp"
                android:minWidth="33dp"
                android:minHeight="50dp"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/game_lifeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxWidth="33dp"
                android:maxHeight="20dp"
                android:minWidth="33dp"
                android:minHeight="50dp"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/compute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_computationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="250dp"
                android:text=""
                android:textColor="?attr/colorOnPrimary"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/game_answerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:minHeight="50dp"
                android:text="@string/answer"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="30sp"
                android:typeface="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/game_clearComputeFloatingButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="?attr/colorPrimary"
                    android:clickable="true"
                    android:contentDescription="@string/clear"
                    app:borderWidth="0dp"
                    app:fabSize="auto"
                    app:maxImageSize="50dp"
                    app:srcCompat="@android:drawable/ic_menu_delete"
                    app:useCompatPadding="false"
                    tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/game_keyboardButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/seven"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/game_keyboardButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/height"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/game_keyboardButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/nine"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/game_keyboardButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/four"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle,TextContrastCheck,TextContrastCheck" />

                <Button
                    android:id="@+id/game_keyboardButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/five"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/game_keyboardButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/six"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/game_keyboardButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/one"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/game_keyboardButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/two"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/game_keyboardButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/three"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/game_keyboardSignumButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/signum"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle,TextContrastCheck,TextContrastCheck" />

                <Button
                    android:id="@+id/game_keyboardButton0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/zero"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/game_keyboardSubmitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"

                    android:scaleX="0.9"

                    android:text="@string/ok"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp"
                    android:typeface="normal"
                    app:cornerRadius="0sp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="1sp"
                    tools:ignore="ButtonStyle,TextContrastCheck,TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/game_pressStartTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:gravity="bottom"
            android:text="@string/press_start"
            android:textColor="@color/transparent_white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>